@model BitSolutions.Models.Ticket


@ViewBag.TypeForm

@* De acuerdo al dato que tiene viewbag se mostrará la vista requerida *@

<div class="main">
    <div class="main__scroll scrollbar-macosx">
        <div class="main__cont">
            <div class="main-heading">
                <div class="main-title">

                    @if (@ViewBag.TypeForm != null)
                    {
                        switch (@ViewBag.TypeForm)
                        {
                            case "addSAS":
                                <ol class="breadcrumb">
                                    <li>
                                        @Html.ActionLink("Solicitudes", "IndexSASCoordinator", "User", null, null)
                                    </li>
                                    <li class="active">
                                        @Html.ActionLink("Agregar solicitud de atención", "IndexAddSASCoordinator", "User", new { data = "addSAS" }, null)
                                    </li>
                                </ol>
                                break;
                            case "viewSAS":
                                <ol class="breadcrumb">
                                    <li>
                                        @Html.ActionLink("Solicitudes", "IndexSASCoordinator", "User", null, null)
                                    </li>
                                    <li class="active">
                                        @Html.ActionLink("Ver solicitud de atención", "IndexViewSASCoordinator", "User", new { data = "viewSAS" }, null)
                                    </li>
                                </ol>
                                break;
                            default:
                                break;
                        }
                    }
                    else
                    {
                        <ol class="breadcrumb">
                            <li>
                                @Html.ActionLink("Solicitudes", "IndexSASCoordinator", "User", null, null)
                            </li>
                        </ol>
                    }
                </div>
                <div class="main-filter">
                    <form class="main-filter__search">
                        <div class="input-group">
                            <input class="form-control" type="text" placeholder="Search..."><span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <div class="fa fa-search"></div>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>

            @if (@ViewBag.TypeForm != null)
            {
                <div class="container-fluid half-padding">
                    <div class="template template__controls">
                        @switch (@ViewBag.TypeForm)
                        {
                            case "addSAS":
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="panel panel-danger">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">Solicitud de Atención</h3>
                                            </div>
                                            <div class="panel-body">
                                                @Html.Partial("~/Views/SAS/CreateSASCoordinator.cshtml", Model)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                break;

                            case "viewSAS":
                                <div class="col-md-12">
                                    <div class="panel panel-danger">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">Solicitud de Atención</h3>
                                        </div>
                                        <div class="panel-body">
                                            @Html.Partial("~/Views/SAS/ViewSASCoordinator.cshtml", Model)
                                        </div>
                                    </div>
                                </div>
                                break;
                            default:
                                break;
                        }
                    </div>
                </div>
            }

        </div>
    </div>
</div>
