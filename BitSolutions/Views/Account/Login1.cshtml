
@model BitSolutions.Models.DB_RRHH_Emplogin

@section Styles {
    @Styles.Render("~/Content/LoginCss")
}

<div class="login">

    @using (Html.BeginForm("Login", "Account",
             FormMethod.Post, new { @class = "login__form" }))
    {
        @Html.AntiForgeryToken()
        <div class="login__logo"></div>

        <div class="form-group">
            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Login" } })
            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group login__action">
            <div class="login__submit">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    }

</div>

@Html.Partial("~/Views/Themes/Theme.cshtml");

@section Scripts {
    @Scripts.Render("~/bundles/LoginJs")
    @Scripts.Render("~/bundles/jqueryval")
}
